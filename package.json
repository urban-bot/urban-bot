{
  "name": "urban-bot",
  "version": "0.0.0",
  "description": "The universal chatbot library based on React. Write once, launch Telegram, Slack, ... every messenger with chatbots",
  "scripts": {
    "start": "lerna run start --stream --parallel --scope @urban-bot/*",
    "lint": "lerna run lint  --stream --parallel",
    "test": "lerna run test  --stream --parallel",
    "build": "lerna run build --stream",
    "lint:fix": "lerna run lint:fix  --stream --parallel",
    "typecheck": "lerna run typecheck  --stream --parallel",
    "prepare": "lerna run prepare  --stream",
    "my-publish": "lerna publish '--force-publish=*'"
  },
  "authors": [
    "ledamint",
    "oTkPoBeHuE"
  ],
  "license": "MIT",
  "devDependencies": {
    "lerna": "4.0.0",
    "husky": "4.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/urban-bot/urban-bot.git"
  },
  "homepage": "https://urban-bot.now.sh",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "engines": {
    "node": ">=12.0.0"
  }
}

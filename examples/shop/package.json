{
    "name": "urban-bot-example-shop",
    "version": "0.2.5",
    "private": true,
    "description": "urban bot shop example",
    "repository": {
        "type": "git",
        "url": "https://github.com/urban-bot/urban-bot.git",
        "directory": "examples/shop"
    },
    "license": "MIT",
    "main": "dist/index.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "webpack",
        "dev": "nodemon",
        "lint": "eslint \"./src\" --ext \".js,.jsx,.ts,.tsx\"",
        "lint:fix": "npm run lint -- --fix",
        "start": "node dist/index.js",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@types/jest": "^25.2.1",
        "@types/node": "^14.0.11",
        "@types/react": "^16.9.34",
        "@urban-bot/core": "^0.2.5",
        "@urban-bot/facebook": "^0.2.5",
        "@urban-bot/slack": "^0.2.5",
        "@urban-bot/telegram": "^0.2.5",
        "dotenv": "^8.2.0",
        "file-loader": "^6.0.0",
        "react": "^16.13.1",
        "ts-loader": "^9.2.5",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^4.5.0",
        "webpack-node-externals": "^1.7.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^3.0.0",
        "nodemon": "^2.0.3",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "arrowParens": "always",
        "endOfLine": "lf"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts,tsx,js,jsx,json",
        "exec": "webpack --mode=development && node ./dist/index.js"
    }
}
